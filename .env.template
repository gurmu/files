# Azure AI Search Configuration
SEARCH_ENDPOINT=https://YOUR-SEARCH-SERVICE.search.windows.net
SEARCH_API_KEY=YOUR-SEARCH-API-KEY

# Azure Storage Configuration
STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=YOUR-STORAGE-ACCOUNT;AccountKey=YOUR-STORAGE-KEY;EndpointSuffix=core.usgovcloudapi.net
PDF_CONTAINER=sustainable-ai-pdf
IMAGE_CONTAINER=sustainable-ai-pdf-images

# Azure OpenAI Configuration (for embeddings)
OPENAI_ENDPOINT=https://YOUR-OPENAI-RESOURCE.openai.azure.com/
OPENAI_API_KEY=YOUR-OPENAI-API-KEY
EMBEDDING_DEPLOYMENT=text-embedding-3-large
EMBEDDING_MODEL=text-embedding-3-large
EMBEDDING_DIMENSIONS=3072

# Chat Completion Configuration (for image verbalization)
# This can be Azure OpenAI, Microsoft Foundry, or another chat completion endpoint
CHAT_COMPLETION_ENDPOINT=https://YOUR-CHAT-COMPLETION-ENDPOINT/openai/deployments/YOUR-DEPLOYMENT/chat/completions?api-version=2024-08-01-preview
CHAT_COMPLETION_API_KEY=YOUR-CHAT-COMPLETION-API-KEY
